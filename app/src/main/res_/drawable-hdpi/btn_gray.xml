<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#CDC8B1"/>
            <stroke
                    android:width="1dp"
                    android:color="#ff0a05dc"/>
            <corners
                    android:radius="3dp"/>
            <padding
                    android:left="10dp"
                    android:top="2dp"
                    android:right="10dp"
                    android:bottom="2dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#CDCDC1"
                    android:endColor="#FFFDFF"
                    android:angle="270"/>
            <stroke
                    android:width="1dp"
                    android:color="#8B8B83"/>
            <corners
                    android:radius="3dp"/>
            <padding
                    android:left="10dp"
                    android:top="2dp"
                    android:right="10dp"
                    android:bottom="2dp"/>
        </shape>
    </item>
</selector>