<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#ffffe5ab">

    <!-- Name Label -->

    <TextView
        android:id="@+id/titleItemText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:textColor="#ff001ebd"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Title" />

    <!-- Email label -->
    <TextView
        android:id="@+id/deskripItemText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:textColor="@android:color/background_dark"
        android:text="Deskription" />

    <!-- Mobile number label -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sourseItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Sourse"
            android:textColor="#5d5d5d"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/dateItemText"
            android:layout_marginLeft="50dp"
            android:textColor="#ffa47c0f" />
    </LinearLayout>

</LinearLayout>